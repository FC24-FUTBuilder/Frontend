{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, // Disable strict mode
    "noUnusedLocals": false, // Disable checking for unused locals
    "noUnusedParameters": false, // Disable checking for unused parameters
    "noFallthroughCasesInSwitch": false // Disable checking for fallthrough cases in switch statements
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
